" loadplugins '\.(js|penta)$'
" group user

set cdpath=''
set guioptions=rnsT

map -count -modes=n <BS> -builtin <count>:back<Return>

" 'normal' copying and pasting
nmap -b <C-c> <C-v><C-c>
nmap -b <C-v> <C-v><C-v>
nmap -b <C-x> <C-v><C-x>

" Insert Mode Mappings
imap -b <C-c> <C-v><C-c>
imap -b <C-v> <C-v><C-v>
imap -b <C-x> <C-v><C-x>

" less granular movement
map -builtin j 10j
map -builtin k 10k

" remap h&l to Back/Forward
map -builtin h H
map -builtin l L

nmap -builtin <C-a> <C-v><C-a>
imap -builtin <C-a> <C-v><C-a>

# next tab
map K :tn<CR>
map J :tp<CR>  # previous tab

# Use full zoom instead of text-only zoom
map -builtin zi ZI
map -builtin zo ZO

set passkeys+=walkhighlands.co.uk/maps:<Up><Down><Left><Right><PageUp><PageDown>
set passkeys+=google.co.uk/maps:<Up><Down><Left><Right>

 # numbers are far, far away from home row
 set hintkeys=asdfghjkl 

# highlight search terms
set hlfind  

# incremental search
set incfind  

# Styling
highlight Hint font-family: sans-serif; font-size: 13px; font-weight: normal; color: black; background-color: #fffcc8 !important; border: 1px solid black; padding: 2px; line-height: 13px; text-transform: none;
highlight HintActive background-color: rgba(0,0,0,0) !important;
highlight HintElem background-color: rgba(0,0,0,0) !important;
