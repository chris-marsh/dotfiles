var koa = require('koa');
var route = require('koa-route');

var app = koa();

app.use(route.get('/', index));
app.use(route.get('/about', about));

app.listen(8008);
console.log('Koa listening on port 8008');

function *index() {
    this.body = "<h1>Hello! This is my page!</h1>";
}

function *about() {
    this.body = "<h2>My name is Chris and I'm learning web frameworks in node</h2>";
}

