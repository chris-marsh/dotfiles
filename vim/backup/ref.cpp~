#include <iostream>
using namespace std;

int main()
{
    float nums[3];
    cout << sizeof(nums);
    for(int i=1; i<4; i++) {
        
        cout << "Float " << i << ": "; cin >> nums[i];
    }
    cout << "Averaging; ";
    float avg = 0;
    for (int i=1; i<4; i++) {
        cout << nums[i] << ",";
        avg += nums[i];
    }

    cout << " = " << endl << (avg / 3) << endl;
    return(0);
}
