# Specific app settings
for_window [class="\w*"] border pixel 1
for_window [class="Google-chrome" window_role="browser"] border none
for_window [class="Chromium" window_role="browser"] border none
for_window [class="Firefox" window_role="browser"] border none

for_window [class="Scribus" title="Story Editor"] floating enable

# Enable floating mode for pop-up windows
for_window [window_role="pop-up"] floating enable
# Enable floating mode for Chrome Notifications
for_window [window_role="bubble"] floating enable
for_window [class="Screenkey"] floating enable

# Set touchpad sensitivity & mouse acceleration
exec --no-startup-id xinput --set-prop 14 "Synaptics Finger" 15 35 257
exec --no-startup-id xinput --set-prop 14 "Synaptics Noise Cancellation" 28 28
exec --no-startuo-id xset m 3/2 4

# Add a small delay to prevent suspend races
# https://bugs.launchpad.net/ubuntu/+source/unity-2d/+bug/830348
set $Locker ~/bin/autolock.sh && sleep 1

# Bind Pause key to show menu in the tray, for ...
set $mode_system System:  (l) Lock | (s) Suspend | (e) Logout | (r) Reboot | (Shift+s) Shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym Pause mode "$mode_system"

# Create and name workspaces
exec --no-startup-id i3-msg 'workspace 1  ssh; exec ~/bin/evilvte'
exec --no-startup-id i3-msg 'workspace 2  www; exec ~/bin/evilvte'
exec --no-startup-id i3-msg 'workspace 3  dev; exec ~/bin/evilvte'
exec --no-startup-id i3-msg 'workspace 4  fm; exec ~/bin/evilvte'

# -- Startup programs -- #

exec nm-applet
# Start tint2 panel
exec tint2
# Run dunst for notifications
exec killall -q dunst
exec --no-startup-id dunst -config ~/.i3/dunst.conf
# Use feh to set a workspace background image
exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/wp2.jpg
# Switch off the annoying terminal bell
exec --no-startup-id /usr/bin/xset b off
# Start compton for transparancey effects
exec --no-startup-id compton --config ~/.compton.conf 
# udiskie to automount usb,mmc,etc
exec --no-startup-id udiskie --tray

